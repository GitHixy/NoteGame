{
  "name": "notegame",
  "productName": "NoteGame",
  "version": "1.0.0",
  "description": "Un'app per prendere note sui tuoi videogiochi",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "build:css": "node node_modules/tailwindcss/lib/cli.js -i ./index.css -o ./dist/output.css --minify",
    "build:ts": "tsc",
    "build:webpack": "webpack --config webpack.config.cjs --mode=production",
    "build": "npm run build:css && npm run build:ts && npm run build:webpack",
    "dev": "npm run build && npm start",
    "package": "electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "keywords": ["gaming", "notes", "electron", "desktop"],
  "author": "GitHixy",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "css-loader": "^7.1.2",
    "electron": "^36.4.0",
    "electron-icon-maker": "^0.0.5",
    "html-webpack-plugin": "^5.6.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "electron-squirrel-startup": "^1.0.1",
    "postcss": "^8.5.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "type": "module"
}
